<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/productImageView"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bazel"
        android:padding="5dp" />

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/productImageView"
        android:layout_marginTop="12dp"
        android:singleLine="false"
        android:textSize="16sp"
        android:text="Bazel Bites" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/productNameTextView"
        android:layout_alignBottom="@+id/productNameTextView"
        android:layout_alignRight="@+id/productImageView"
        android:textColor="#ff0000"
        android:textSize="16sp"
        android:text="Rs. 50" />

</RelativeLayout>
